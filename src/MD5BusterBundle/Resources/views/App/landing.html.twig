{% extends '@MD5Buster/layout.html.twig' %}
{% block meta_title %}
    {% set site_title = 'MD5 Buster' %}
    {% set description = 'Free online tool used to decode/decrypt MD5 hashes; it can also be used to encode/ecrypt regular text into 32 hexadecimal md5-specific string' %}
    <title>{{ site_title }}</title>
    <link rel="author" href="https://plus.google.com/117552068412499585385" />
    <meta name="author" content="deepmikoto" />
    <meta name="keywords" content="md5,decrypt,encrypt,decrypt md5,encrypt md5,online">
    <meta name="description" content="{{ description }}" />
    <meta property="og:title" content="{{ site_title }}" />
    <meta property="og:description" content="{{ description }}" />
    <meta property="og:url" content="{{ url( 'md5buster_homepage' ) }}" />
    <meta property="fb:app_id" content="{{ fb_app_id }}" />
    <meta name="twitter:title" content="{{ site_title }}" />
    <meta name="twitter:description" content="{{ description }}" />
    <meta itemprop="name" content="{{ site_title }}" />
    <meta itemprop="description" content="{{ description }}" />
    {% image '@MD5BusterBundle/Resources/public/images/share_image.png' output='images/share_image.png' %}
        <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset_url}}" />
        <meta name="twitter:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset_url }}" />
        <meta itemprop="image" content="{{ app.request.getSchemeAndHttpHost() ~ asset_url }}" />
    {% endimage %}
{% endblock %}
{% block body %}
    {% include '@MD5Buster/templates/body/_body_frame.html.twig' %}
{% endblock %}